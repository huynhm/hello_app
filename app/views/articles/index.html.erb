<h1 align= 'center'> articleS page </h1>




	<div class='row'>

		<div class='col-xs-8 col-xs-offset-2'>
			<div class='well well-lg'>
				<%= link_to "Create NEW article" , new_article_path, class: 'btn btn-info' %>
				</div>
		</div>	

	</div> 	
	
	<% @articles.each do |article| %>
	<div class='row'>
		<div class='col-xs-8 col-xs-offset-2'>


			<div class='well well-lg'>
				<div class='article-title'>
					<%= link_to article.title, article_path(article) %>
				</div>
					<div class='article-body'>
						<div class='article-meta-details'>
								<%= truncate(article.description, length: 100) %> 
								<small> 
									<% if article.user %>
											Created by: <%= article.user.username %> 
									<% end %>

									<% if article.created_at %>
										<%= time_ago_in_words(article.created_at) %> ago

									<% end %>

									<% if article.updated_at %>
										last updated: <%= time_ago_in_words(article.updated_at) %> ago

									<% end %>

										
										

								 </small>						


						</div>	
					</div>

					<div class ='article-actions'>

					<%= link_to "  Edit this article ", edit_article_path(article), class: 'btn btn-xs btn-primary' %>	
					<%= link_to "Delete this article", article_path(article), method: :delete, data: {confirm: 'Are you sure you want to Delete?'}, class: 'btn btn-xs btn-danger' %>
					
					</div>
			</div>
		</div>
	</div>

	<% end %>

